<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/KodeBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kode Barang" />

    <EditText
        android:id="@+id/NamaBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Barang" />

    <EditText
        android:id="@+id/Merk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Merk" />

    <EditText
        android:id="@+id/HargaBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Barang" />

    <EditText
        android:id="@+id/JumlahStok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Stok" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <!-- Add Barang Button -->
        <ImageButton
            android:id="@+id/addBarangButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add"
            android:contentDescription="Add Barang"
            android:background="@drawable/button_outline"
            android:padding="10dp"
            android:layout_marginEnd="5dp" />

        <!-- Update Barang Button -->
        <ImageButton
            android:id="@+id/updateBarangButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_edit"
            android:contentDescription="Update Barang"
            android:background="@drawable/button_outline"
            android:padding="10dp"
            android:layout_marginEnd="5dp" />

        <!-- Delete Barang Button -->
        <ImageButton
            android:id="@+id/deleteBarangButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete Barang"
            android:background="@drawable/button_outline"
            android:padding="10dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <!-- Table Headers Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DDDDDD"
        android:padding="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kode Barang"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Nama Barang"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Merk"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Harga Barang"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Jumlah Barang"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Barang Data List -->
    <ListView
        android:id="@+id/barangListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
